    "express-async-errors": "^3.1.1",
    "mongoose": "^6.0.9",
    "mongoose-unique-validator": "^3.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6"
  }
